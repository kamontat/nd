{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [{
    "name": "Run mocha",
    "type": "node",
    "request": "launch",
    "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
    "stopOnEntry": false,
    "args": ["--no-timeouts", "--require", "ts-node/register", "${workspaceRoot}/modules/**/*.spec.ts", "${workspaceRoot}/src/**/*.spec.ts"],
    "cwd": "${workspaceRoot}",
    "protocol": "inspector",
    "env": {
      "NODE_ENV": "test",
      "TS_NODE_SKIP_IGNORE": "true",
      "TS_NODE_DEBUG": "true",
    }
  }]
}