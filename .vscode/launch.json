{
  // Open debugging file when run this configuration
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug specify file in AVA unittests",
      "program": "${workspaceFolder}/node_modules/ava/profile.js",
      "args": ["${file}"],
      "internalConsoleOptions": "openOnSessionStart",
      "env": {
        "NODE_ENV": "test",
        "TS_NODE_SKIP_IGNORE": "true",
        "TS_NODE_DEBUG": "true"
      }
    }
  ]
}
