{
  "include": [
    "index.ts",
    "src/**/*.ts",
    "modules/**/*.ts",
    "*.json"
  ],
  "exclude": ["**/*.spec.ts"],
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "lib": ["es2017", "dom"],
    "sourceMap": false,
    "outDir": "./dist",
    "removeComments": true,
    "allowJs": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "noEmit": false,
    "alwaysStrict": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true
  }
}